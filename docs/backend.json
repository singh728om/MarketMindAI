
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a customer of the AI E-commerce Growth Agency.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "companyName": { "type": "string" },
        "onboardingStatus": { "type": "string" },
        "marketplacePreferences": { "type": "array", "items": { "type": "string" } },
        "goals": { "type": "array", "items": { "type": "string" } },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "email", "companyName", "onboardingStatus", "marketplacePreferences", "goals", "createdAt", "updatedAt"]
    },
    "CEOAnalysis": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CEOAnalysis",
      "type": "object",
      "description": "Stores the latest financial and strategic analysis from the AI CEO Agent.",
      "properties": {
        "id": { "type": "string" },
        "userProfileId": { "type": "string" },
        "marketplace": { "type": "string" },
        "metrics": {
          "type": "object",
          "properties": {
            "totalSales": { "type": "number" },
            "profit": { "type": "number" },
            "loss": { "type": "number" },
            "returnRate": { "type": "number" },
            "ctr": { "type": "number" },
            "roas": { "type": "number" }
          }
        },
        "recommendations": { "type": "array", "items": { "type": "string" } },
        "summary": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "userProfileId", "metrics", "recommendations", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/userProfiles/{userProfileId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/backend/entities/UserProfile" },
          "description": "Stores individual customer profiles."
        }
      },
      {
        "path": "/ceoAnalyses/{analysisId}",
        "definition": {
          "entityName": "CEOAnalysis",
          "schema": { "$ref": "#/backend/entities/CEOAnalysis" },
          "description": "Stores the latest AI CEO analysis results."
        }
      }
    ]
  }
}
